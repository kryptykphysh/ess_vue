= javascript_pack_tag 'dashboard'

#dashboard
  %app-nav{ 'active-link' => 'dashboard' }
  %b-container{ fluid: '', style: 'margin-top: 1rem;' }
    %b-row
      %b-card-group{ deck: '' }
        %b-col{ 'v-for' => 'machine of machines' , ':key' => 'machine.id' }
          %b-card.mb-2{ style: 'max-width: 20rem; min-width: 10rem;', align: 'center', 'border-variant' => 'primary', ':title' => 'machine.name', ':sub-title' => 'machine.location' }
